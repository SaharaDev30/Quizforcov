<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffff"/>
            <stroke
                android:width="1dp"
                android:color="@color/accountLabel" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/accountLabel" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>